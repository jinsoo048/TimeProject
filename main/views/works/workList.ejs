<!DOCTYPE html>
<html lang="en">
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Work List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>

<div class="card-body">
    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>
    <form action="/works/workList" method="post">
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">workID</th>
                        <th scope="col">employeeID</th>
                        <th scope="col">workBegin</th>
                        <th scope="col">workEnd</th>
                        <th scope="col">workingTime</th>
                        <th scope="col">workDetail</th>
                        <th scope="col">projectID</th>
                        <th scope="col">workTypeID</th>

                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i< data.length; i++) { %>
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><%= data[i].workID%></td>
                            <td><%= data[i].employeeID%></td>
                            <td><%= data[i].workBegin%></td>
                            <td><%= data[i].workEnd%></td>
                            <td><%= data[i].workingTime%></td>
                            <td><%= data[i].workDetail%></td>
                            <td><%= data[i].projectID%></td>
                            <td><%= data[i].workTypeID%></td>
                            <td>
                                <a class="btn btn-success edit" href="/works/edit/<%=data[i].workID%>">Edit</a>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            <% } %>

            <!-- if result is empty -->
            <% if(!data.length) { %>
                <p class="text-center">No Works found!</p>
            <% } %>
        </div>
        <div>
            <td>
                <a class="btn btn-success edit" href="/works/add">Add a new work</a>
            </td>
        </div>
    </form>

</div>

</body>
</html>
