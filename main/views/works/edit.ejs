<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Edit Work</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">
	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>
    <div class="card"> 
    	<div class="card-header">
			Edit Work
		</div>
        <div class="card-body">
            <form action="/works/update/<%= workID %>" method="post">
                <!--
                <div class="form-group">
                    <label>workID:</label>
                    <input type="number" class="form-control" name="workID" value="<%= workID %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>employeeID:</label>
                    <input type="number" class="form-control" name="employeeID" value="<%= employeeID %>" autocomplete="off">
                </div>
                -->
                <div class="form-group">
                    <label>workBegin:</label>
                    <input type="datetime-local" class="form-control" name="workBegin" value="<%= workBegin %>" autocomplete="on">
                </div>
                <div class="form-group">
                    <label>workEnd:</label>
                    <input type="datetime-local" class="form-control" name="workEnd" value="<%= workEnd %>" autocomplete="on">
                </div>
                <div class="form-group">
                    <label>workingTime:</label>
                    <input type="number" class="form-control" name="workingTime" value="<%= workingTime %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>workDetail:</label>
                    <input type="text" class="form-control" name="workDetail" value="<%= workDetail %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>projectID:</label>
                    <input type="number" class="form-control" name="projectID" value="<%= projectID %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>workTypeID:</label>
                    <select name="workTypeID" value="<%= workTypeID %>" >
                        <option value="project">project</option>
                        <option value="development">development</option>
                        <option value="project & development">project & development</option>
                    </select>
                    <br><br>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Update"/>
                </div>
            </form>
        </div>
        </div>
    </div>
</body>
</html>
