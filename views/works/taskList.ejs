<!DOCTYPE html>
<html lang="en">
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Work List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>

<div class="card-body">
    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>
    <form action="/works/taskList" method="post">
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Task ID</th>
                        <th scope="col">Employee ID</th>
                        <th scope="col">Employee Name</th>
                        <th scope="col">Task Begin</th>
                        <th scope="col">Task End</th>
                        <th scope="col">Estimated Time</th>
                        <th scope="col">Task Detail</th>
                        <th scope="col">Project ID</th>
                        <th scope="col">Task Type ID</th>
                        <th scope="col">Task Type Name</th>

                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i< data.length; i++) { %>
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><%= data[i].taskID%></td>
                            <td><%= data[i].employeeID%></td>
                            <td><%= data[i].employeeName%></td>
                            <td><%= data[i].taskBegin%></td>
                            <td><%= data[i].taskEnd%></td>
                            <td><%= data[i].estimatedTime%></td>
                            <td><%= data[i].taskDetail%></td>
                            <td><%= data[i].projectID%></td>
                            <td><%= data[i].taskTypeID%></td>
                            <td><%= data[i].taskTypeName%></td>
                            <td>
                                <a class="btn btn-success edit" href="/works/edit/<%=data[i].taskID%>">Edit</a>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            <% } %>

            <!-- if result is empty -->
            <% if(!data.length) { %>
                <p class="text-center">No Works found!</p>
            <% } %>
        </div>
        <div>
            <td>
                <a class="btn btn-success edit" href="/works/add">Add a new task</a>
            </td>
        </div>
    </form>

</div>

</body>
</html>
