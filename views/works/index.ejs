<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Tasks</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link">Tasks List</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/works/add">Add Task</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        <% if(data.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">taskID</th>
                    <th scope="col">employeeID</th>
                    <th scope="col">taskBegin</th>
                    <th scope="col">taskEnd</th>
                    <th scope="col">taskTime</th>
                    <th scope="col">taskDetail</th>
                    <th scope="col">projectID</th>
                    <th scope="col">taskTypeID</th>
                    <th width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= data[i].taskID%></td>
                    <td><%= data[i].employeeID%></td>
                    <td><%= data[i].taskBegin%></td>
                    <td><%= data[i].taskEnd%></td>
                    <td><%= data[i].taskTime%></td>
                    <td><%= data[i].taskDetail%></td>
                    <td><%= data[i].projectID%></td>
                    <td><%= data[i].taskTypeID%></td>
                    <td>
                        <a class="btn btn-success edit" href="../tasks/edit/<%=data[i].taskID%>">Edit</a>
                        <a class="btn btn-danger delete" onclick="return alert('Are you sure want to delete this record?')" href="../tasks/delete/<%=data[i].taskID%>">Delete</a>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>

        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No Tasks found!</p>
        <% } %>
        </div>
    </div>
</body>
</html>